<div class="container text-center card bg-light col-md-6">
    <form action="" method="post">
        <h1 class="text text-danger">Edit New Category</h1>
        <div class="form-group">
            <label class="text text-danger fw-bold">Product Title</label>
            <input class="form-control" type="text" name="title" placeholder="Enter category name" required
                value="{{category.title}}" id="">
        </div>
        <input type="url" name="img" placeholder="Enter category cover url" required value="{{category.img}}" id="">
        <br><br>

        <div class="form-group mt-3 mb-3">
            <input class="btn btn-success" type="submit" value="Edit">
        </div>

    </form>

</div>