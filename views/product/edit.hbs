<div class="container text-center card bg-light col-md-6">
    <form action="" method="post">
        <h1 class="text text-danger">Edit New Product</h1>
        <div class="form-group">
            <label class="text text-danger fw-bold">Product Title</label>
            <input class="form-control" type="text" name="title" placeholder="Enter Product name" required
                value="{{product.title}}" id="">
        </div>
        <br><br>
        <label class="text text-danger fw-bold">Category</label>
        <br>
        <select name="genre" id="">
            <option value="Dolls">Dolls</option>
            <option value="Board Game">Board Game</option>
            <option value="Action Figues">Action Figures</option>
        </select>
        <br><br>
        <input type="number" name="price" placeholder="Enter product price" required value="{{product.price}}" id="">
        <br><br>
        <input type="url" name="cover" placeholder="Enter product cover url" required value="{{product.cover}}" id="">
        <br><br>
        <input type="number" name="quantity" placeholder="Enter product quantity" required value="{{product.quantity}}" id="">
        <br><br>
        <input type="string" name="description" placeholder="Enter description of product" required
            value="{{product.description}}" id="">
        <div class="form-group mt-3 mb-3">
            <input class="btn btn-success" type="submit" value="Edit">
        </div>

    </form>

</div>